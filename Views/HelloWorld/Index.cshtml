@model MvcMovie.Models.Grid
@using MvcMovie.Controllers
@using MvcMovie.Models

@{
    ViewData["Title"] = "Pathfinding";
}

<style>



    .gridZero:hover {
        background-color: #a3eef7;
        border: 2px solid #fff;
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }

    .gridZero {
        background-color: #93ded7;
        border: 2px solid #fff;
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }

    .gridOne {
        background-color: green;
        border: 2px solid #fff;
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }

    .gridTwo {
        background-color: red;
        border: 2px solid #fff;
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }

    .gridThree {
        background-color: black;
        border: 2px solid #fff;
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }

    .gridFour {
        background-color: yellow;
        border: 2px solid #fff;
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }

    .tools {
        -moz-border-radius: 6px;
        -webkit-border-radius: 6px;
        background-color: #f0f7fb;
        background-position: 9px 0px;
        background-repeat: no-repeat;
        border: solid 1px #3498db;
        border-radius: 6px;
        line-height: 18px;
        overflow: hidden;
        padding: 10px 40px;
        cursor: pointer;
        margin-left: 4px;
        margin-right: 4px;
        vertical-align: top;
        display: inline-block;
        *display: inline;
    }

    .contain {
        height: 50px;
        width: 840px;
        text-align: justify;
        -ms-text-justify: distribute-all-lines;
        text-justify: distribute-all-lines;
    }

    .stretch {
        width: 80%;
        display: inline-block;
        font-size: 0;
        line-height: 0
    }
</style>


<h2>Pathfinding Algorithm Visualization</h2>

<p>Select items to add to grid...</p>
<div class=" contain">
    <div class="tools" onclick="myFunction(100, 100)">
        Start
    </div>

    <div class="tools" onclick="myFunction(101, 101)">
        End
    </div>

    <div class="tools" onclick="myFunction(102, 102)">
        Wall
    </div>
    <div class="tools" onclick="myFunction(103, 103)">
        Eraser
    </div>
    <span class="stretch"></span>
</div>

<table>
    <tbody>
        @for (int i = 0; i < 10; i++)
        {
        <tr>
            @for (int j = 0; j < 20; j++)
            {
                @foreach (var f in Model.grid.locations)
                {
                    if (f.XLoc == i && f.YLoc == j)
                    {
                        switch (f.myD)
                        {
                            case 0:
                                <td class="gridZero" id="@i, @j" onclick="myFunction(@i, @j)">
                                </td>
                                break;
                            case 1:
                                <td class="gridOne" id="@i, @j" onclick="myFunction(@i, @j)">
                                </td>
                                break;
                            case 2:
                                <td class="gridTwo" id="@i, @j" onclick="myFunction(@i, @j)">
                                </td>
                                break;
                            case 3:
                                <td class="gridThree" id="@i, @j" onclick="myFunction(@i, @j)">
                                </td>
                                break;
                            case 4:
                                <td class="gridFour" id="@i, @j" onclick="myFunction(@i, @j)">
                                </td>
                                break;
                        }
                    }
                }
            }
        </tr>
        }

    </tbody>
</table>

<div class="tools" onclick="myFunction(104, 104)">
    Visualize
</div>

<script>function myFunction(x, y) {
        window.location.href = '/HelloWorld/setPath/' + x + '/' + y;
    }</script>
